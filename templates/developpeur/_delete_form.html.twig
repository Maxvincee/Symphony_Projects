<form method="post" action="{{ path('app_developpeur_delete', {'id': developpeur.id}) }}"
      onsubmit="return confirm('Confirmer la suppression du développeur {{ developpeur.nom }} ?');">

    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ developpeur.id) }}">
    <button class="btn">Supprimer ce développeur</button>
</form>
