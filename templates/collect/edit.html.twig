{% extends 'base.html.twig' %}

{% block title %}Modifier un jeu de la collection{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('app_collect_index') }}">Collections</a></li>
    <li class="breadcrumb-item"><a href="{{ path('app_collect_show_user', {'id': collect.utilisateur.id}) }}">{{ collect.utilisateur.pseudo }}</a></li>
    <li class="breadcrumb-item active">Modifier</li>
{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="game-card">
            <div class="game-card-body">
                <h1 class="mb-4">Modifier un jeu de la collection</h1>

                <div class="alert alert-info mb-4">
                    <strong>{{ collect.jeuvideo.titre }}</strong> dans la collection de <strong>{{ collect.utilisateur.pseudo }}</strong>
                </div>

                {{ include('collect/_form.html.twig', {'button_label': 'Enregistrer les modifications'}) }}

                <div class="mt-3 d-flex gap-2">
                    <a href="{{ path('app_collect_show_user', {'id': collect.utilisateur.id}) }}" class="btn btn-secondary">
                        ← Retour à la collection
                    </a>
                    {{ include('collect/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
