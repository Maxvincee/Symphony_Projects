{% extends 'base.html.twig' %}

{% block title %}Ajouter un jeu à une collection{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('app_collect_index') }}">Collections</a></li>
    <li class="breadcrumb-item active">Ajouter un jeu</li>
{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="game-card">
            <div class="game-card-body">
                <h1 class="mb-4">Ajouter un jeu à une collection</h1>

                {{ include('collect/_form.html.twig') }}

                <div class="mt-3">
                    <a href="{{ path('app_collect_index') }}" class="btn btn-secondary">
                        ← Retour aux collections
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
