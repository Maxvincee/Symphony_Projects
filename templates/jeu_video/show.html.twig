{% extends 'base.html.twig' %}

{% block title %}Jeu vidéo : {{ jeu_video.titre }}{% endblock %}

{% block body %}
    <h1>Jeu vidéo : {{ jeu_video.titre }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ jeu_video.id }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>
                {% if jeu_video.imageUrl %}
                    <img src="{{ asset('uploads/' ~ jeu_video.imageUrl) }}"
                         alt="Image du jeu"
                         style="max-width: 300px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
                {% else %}
                    <p><em>Aucune image pour ce jeu.</em></p>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ jeu_video.titre }}</td>
        </tr>
        <tr>
            <th>Date de sortie</th>
            <td>{{ jeu_video.dateSortie ? jeu_video.dateSortie|date('d/m/Y') : '' }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ jeu_video.prix ? jeu_video.prix|number_format(2, ',', ' ') ~ ' €' : '' }}</td>
        </tr>
        <tr>
            <th>Genre</th>
            {# Nom du genre en majuscules [cite: 855] #}
            <td>{{ jeu_video.genre ? jeu_video.genre.nom|upper : '' }}</td>
        </tr>
        <tr>
            <th>Développeur</th>
            <td>{{ jeu_video.developpeur ? jeu_video.developpeur.nom : '' }}</td>
        </tr>
        <tr>
            <th>Editeur</th>
            <td>{{ jeu_video.editeur ? jeu_video.editeur.nom : '' }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ jeu_video.description }}</td>
        </tr>
        <tr>
            {# Format jour/mois/année Heure:Minute [cite: 433] #}
            <th>Date de création</th>
            <td>{{ jeu_video.createdAt ? jeu_video.createdAt|date('d/m/Y H:i') : '' }}</td>
        </tr>
        <tr>
            <th>Date de modification</th>
            <td>{{ jeu_video.updatedAt ? jeu_video.updatedAt|date('d/m/Y H:i') : '' }}</td>
        </tr>
        </tbody>
    </table>

        <a href="{{ path('app_jeu_video_edit', {'id': jeu_video.id}) }}" class="btn">Modifier ce jeu</a>

        {{ include('jeu_video/_delete_form.html.twig') }}

        <a href="{{ path('app_jeu_video_index') }}">Retour à la liste des jeux</a>

{% endblock %}
