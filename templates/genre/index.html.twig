{% extends 'base.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item active" aria-current="page">Genres</li>
{% endblock %}

{% block title %}Liste des genres de jeux vidéo{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Genres</h1>
        <a href="{{ path('app_genre_new') }}" class="btn btn-custom">
            + Nouveau Genre
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Statut</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for genre in genres %}
                <tr>
                    <td><strong>{{ genre.nom|upper }}</strong></td>
                    <td>{{ genre.description }}</td>
                    <td>
                        {% if genre.actif %}
                            <span class="badge bg-success">Actif</span>
                        {% else %}
                            <span class="badge bg-secondary">Inactif</span>
                        {% endif %}
                    </td>
                    <td class="text-end">
                        <div class="btn-group">
                            <a href="{{ path('app_genre_show', {'id': genre.id}) }}" class="btn btn-sm btn-outline-custom">Voir</a>
                            <a href="{{ path('app_genre_edit', {'id': genre.id}) }}" class="btn btn-sm btn-outline-custom">Edit</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center py-5">
                        <h5 class="text-muted">Aucun genre trouvé</h5>
                        <p>Commencez par ajouter votre premier genre !</p>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
