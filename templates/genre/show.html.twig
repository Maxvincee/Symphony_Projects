{% extends 'base.html.twig' %}

{% block title %}Genre : {{ genre.nom }}{% endblock %}

{% block body %}
    <h1>Genre : {{ genre.nom }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ genre.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ genre.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ genre.description }}</td>
            </tr>
            <tr>
                <th>Est actif</th>
                <td>{{ genre.actif ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ genre.createdAt ? genre.createdAt|date('d/m/Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Date de modification</th>
                <td>{{ genre.updatedAt ? genre.updatedAt|date('d/m/Y H:i') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_genre_edit', {'id': genre.id}) }}">Modifier</a>

    {{ include('genre/_delete_form.html.twig') }}

    <a href="{{ path('app_genre_index') }}">Retourner à la liste des genres</a>
{% endblock %}
