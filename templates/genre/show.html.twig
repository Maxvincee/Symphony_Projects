{% extends 'base.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('app_genre_index') }}">Genres</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ genre.nom }}</li>
{% endblock %}

{% block title %}Genre : {{ genre.nom }}{% endblock %}

{% block body %}
    <h1>{{ genre.nom|upper }}</h1>

    <div class="table-responsive mt-4">
        <table class="table">
            <tbody>
                <tr>
                    <th>Nom</th>
                    <td>{{ genre.nom }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ genre.description }}</td>
                </tr>
                <tr>
                    <th>Statut</th>
                    <td>
                        {% if genre.actif %}
                            <span class="badge bg-success">Actif</span>
                        {% else %}
                            <span class="badge bg-secondary">Inactif</span>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Date de création</th>
                    <td>{{ genre.createdAt ? genre.createdAt|date('d/m/Y H:i') : '' }}</td>
                </tr>
                <tr>
                    <th>Date de modification</th>
                    <td>{{ genre.updatedAt ? genre.updatedAt|date('d/m/Y H:i') : '' }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="d-flex gap-2 mt-4">
        <a href="{{ path('app_genre_edit', {'id': genre.id})}}" class="btn btn-primary">Modifier</a>
        {{ include('genre/_delete_form.html.twig') }}
        <a href="{{ path('app_genre_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
{% endblock %}
